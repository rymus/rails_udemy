<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%= "#{name}" %>'>
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %> 
        <!-- Calls 'content_tag' view helper which creates a div using the 'name' (success, info, warning, danger - standard bootstrap classes) 
        and passes the 'msg' field into the tag if the field contains a string -->
      </div>
    <% end %>
  </div>
</div>